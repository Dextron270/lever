ffi = {import}("ffi")

cast = ffi.cast
cfunc = ffi.cfunc
long = ffi.long

lib = ffi.library("libSDL.so")

print("SDL_Init(65535): ", 
    cast(lib.SDL_Init, cfunc(long, [long]))(65535))

screen = cast(lib.SDL_SetVideoMode,
    cfunc(long, [long,long,long,long]))(640, 480, 32, 0)

cast(lib.SDL_Delay, cfunc(null, [ffi.ulong]))(1000)
cast(lib.SDL_Quit, cfunc(null, []))()
