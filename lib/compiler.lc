class SourcemapBuilder
    +init = (self):
        self.buf = []
        self.count = 0
        self.entry = []

    add = (self, count, origin):
        entry = [0, 0, 0, 0, 0]
        if origin
            entry = [origin.location_id, 
                origin.start.col,
                origin.start.lno,
                origin.stop.col,
                origin.stop.lno]
        if entry != self.entry
            self.buf = self.get()
            self.entry = entry
            self.count = count
        else
            self.count += count

    get = (self):
        if self.count > 0
            raw_entry = enc_vlq(self.count)
            for value in self.entry
                raw_entry.extend(enc_vlq(value))
            return self.buf ++ raw_entry
        return self.buf
 
enc_vlq = (v):
    out = [v & 0x7F]
    while v >= 0x80
        v >>= 7
        out.append(0x80 | v & 0x7F)
    out.reverse()
    return out
