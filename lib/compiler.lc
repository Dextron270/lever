compile_file = (dst, src):
    python_path = process.which("python")
    pid = process.spawnv(python_path, [
        python_path,
        dir ++ "../compiler/compile.py",
        dst, src
    ])
    status = process.waitpid(pid)
    if status != 0
        raise Exception("compile failed")

